@model PublisherAndBook.Models.Book

@{
    ViewData["Title"] = "Delete";
}
<div class="container mb-2">
    <div class="row">
        <div class="col-8 offset-2 shadow p-3 mb-5 bg-white rounded">
            <h3>Delete Books</h3>
            <form method="post" asp-action="Delete" asp-controller="Books" asp-route-BookId="@Model.BookId">
                <input type="hidden" asp-for="BookId" />
                <div class="form-group row mb-2">
                    <label asp-for="BookName" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <label>@Model.BookName</label>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="Price" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <label>@Model.Price</label>
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <label asp-for="Publisher" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <label>@Model.Publisher.PublisherName</label>
                    </div>
                </div>

                <div class="form-group row mb-2">
                    <label asp-for="Picture" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <img src="/Uploads/@Model.Picture" style="width:45px" class="img-thumbnail" />
                    </div>
                </div>
                <div class="form-group row my-1 align-middle">
                    <label asp-for="Status" class="col-form-label col-form-label-sm col-2"></label>
                    <div class="col-4">
                        <input asp-for="Status" type="checkbox" disabled />
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4 offset-2">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-8">
                    <a class="btn btn-outline-dark" asp-action="Index" asp-controller="Books"><i class="bi bi-layer-backward"></i> Back to Index</a>
                </div>
            </div>
        </div>
    </div>
   
</div>
@section styles {
    <link href="~/libs/icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/Custom Design/main.css" rel="stylesheet" />
}




